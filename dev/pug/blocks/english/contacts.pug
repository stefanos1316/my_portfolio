mixin contacts()
	#contacts.contacts-section
		.container
			section.contact-card
				header.contact-card__header
					h2 Contact information
					h4 
				.contact-info
					.contact-info__logo JD
					.contact-info__group
						.contact-info__additional
							p You can find me at Walter Light hall (3rd flor room 304) 
							p every Monday from 14:00-18:00
						.contact-info__vcard.vcard
							h4.fn.org Stefanos Georgiou
							p.role.title PostDoctoral Fellow at ECE
							p.icon.icon_location
								a.adr.js-anchor(href="#gmap")
									span.country-name Canada
									| ,&nbsp;
									span.locality Kingston, ON
							p.icon.icon_mail
								a.email(href="[first name]dot[family name]@[queens]dot[ca]") [first name]dot[family name]@[queens]dot[ca] 
						ul.contact-info__social

							li
								a.icon.icon_twi(rel="https://twitter.com/StefanosGeorgi1") Twitter
							li
								a.icon.icon_gplus(rel="nofollow") Google+
							li
								a.icon.icon_in(rel="nofollow") Linkedin
		#gmap.gmap
